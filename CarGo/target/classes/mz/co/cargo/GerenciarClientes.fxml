<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mz.co.cargo.Controller.GerenciarClientesController"
      spacing="10"
      style="-fx-background-color: #f4f4f4;"
      prefWidth="600" prefHeight="500">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Barra de busca -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField"
                   promptText="Buscar por nome..."
                   prefWidth="300"/>
        <Button text="Buscar" onAction="#onSearch"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <!-- Tabela de clientes -->
    <TableView fx:id="clientesTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
            <TableColumn fx:id="colAcoes" text="Ações" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>