<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="mz.co.cargo.Controller.AdminController"
          hgap="8" vgap="8"
          prefWidth="1200" prefHeight="900"
          minWidth="800" minHeight="600"
          style="-fx-background-color: #E0E0E0;"
          xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="125" minWidth="10" maxWidth="207"/>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="918" minWidth="10" maxWidth="944"/>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="127" minWidth="10" maxWidth="199"/>
    </columnConstraints>

    <rowConstraints>
        <!-- 0: logo -->
        <RowConstraints prefHeight="70" vgrow="SOMETIMES"/>
        <!-- 1: título -->
        <RowConstraints prefHeight="82" vgrow="SOMETIMES"/>
        <!-- 2: saudação -->
        <RowConstraints prefHeight="40" vgrow="SOMETIMES"/>
        <!-- 3: email -->
        <RowConstraints prefHeight="30" vgrow="SOMETIMES"/>
        <!-- 4: pesquisa -->
        <RowConstraints prefHeight="155" vgrow="SOMETIMES"/>
        <!-- 5: cadastrar veículos -->
        <RowConstraints prefHeight="60" vgrow="SOMETIMES"/>

        <RowConstraints prefHeight="70" vgrow="SOMETIMES"/>

        <RowConstraints prefHeight="80" vgrow="SOMETIMES"/>

        <RowConstraints prefHeight="538" vgrow="SOMETIMES"/>
    </rowConstraints>

    <children>
        <!-- Logo -->
        <Label text=" CarGO"
               textFill="#1e3a5f"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font><Font name="System Bold Italic" size="36"/></font>
        </Label>

        <!-- Título -->
        <Label text="Painel administrativo"
               textFill="#1e3a5f"
               GridPane.columnIndex="1" GridPane.rowIndex="1"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font><Font size="52"/></font>
        </Label>

        <!-- Botão Sair -->
        <Button fx:id="botaoSair"
                text="Sair"
                onAction="#voltarParaLogin"
                GridPane.columnIndex="2" GridPane.rowIndex="0"
                GridPane.halignment="RIGHT" GridPane.valignment="TOP">
            <font><Font size="18"/></font>
        </Button>

        <!-- Saudação -->
        <Label fx:id="saudacaoLabel"
               text=""
               textFill="#1e3a5f"
               GridPane.columnIndex="1" GridPane.rowIndex="2"
               GridPane.halignment="CENTER">
            <font><Font size="24"/></font>
        </Label>

        <!-- Email do Admin -->
        <Label fx:id="emailLabel"
               text=""
               textFill="#1e3a5f"
               GridPane.columnIndex="1" GridPane.rowIndex="3"
               GridPane.halignment="CENTER">
            <font><Font size="18"/></font>
        </Label>

        <!-- Área de Pesquisa (rowIndex = 4) -->
        <Label text="Pesquisar"
               textFill="#1e3a5f"
               GridPane.columnIndex="1" GridPane.rowIndex="4"
               GridPane.halignment="LEFT">
            <font><Font size="29"/></font>
            <GridPane.margin>
                <Insets left="5"/>
            </GridPane.margin>
        </Label>
        <TextField prefWidth="798" prefHeight="35"
                   GridPane.columnIndex="1" GridPane.rowIndex="4">
            <font><Font size="19"/></font>
            <GridPane.margin>
                <Insets right="100"/>
            </GridPane.margin>
        </TextField>
        <Button text="Buscar"
                GridPane.columnIndex="1" GridPane.rowIndex="4"
                GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
            <font><Font size="18"/></font>
        </Button>

        <!-- Linha 5: botão Cadastrar veículos -->
        <Button fx:id="cadastrarVeiculosButton"
                text="Cadastrar veículos"
                onAction="#abrirCadastroVeiculo"
                style="-fx-background-color: #1e3a5f;"
                textFill="#e0e0e0"
                GridPane.columnIndex="1" GridPane.rowIndex="7"
                GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font><Font size="18"/></font>
        </Button>

        <Button fx:id="cadastrarAdminButton"
                text="Cadastrar Admin"
                onAction="#abrirCadastroAdmin"
                style="-fx-background-color: #1e3a5f;"
                textFill="#e0e0e0"
                GridPane.columnIndex="1" GridPane.rowIndex="6"
                GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font><Font size="18"/></font>
        </Button>

        <Button fx:id="gerenciarClientes"
                text="Gerenciar Clientes"
                onAction="#abrirTeste"
                style="-fx-background-color: #1e3a5f;"
                textFill="#e0e0e0"
                GridPane.columnIndex="1" GridPane.rowIndex="5"
                GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font><Font size="18"/></font>
        </Button>

        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="8"
                  hgap="10" vgap="10"
                  prefWidth="923" prefHeight="447"
                  style="-fx-background-color: #E0E0E0;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="300"/>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200"/>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200"/>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="342" vgrow="SOMETIMES"/>
                <RowConstraints prefHeight="342" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>

    </children>
</GridPane>
