<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane hgap="8" minHeight="600" minWidth="800" prefHeight="900" prefWidth="1200" style="-fx-background-color: #E0E0E0;" vgap="8" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mz.co.cargo.Controller.AdminController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="207" minWidth="10" prefWidth="125" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="944" minWidth="10" prefWidth="918" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="199" minWidth="10" prefWidth="127" />
    </columnConstraints>

    <rowConstraints>
        <!-- 0: logo -->
        <RowConstraints prefHeight="70" vgrow="SOMETIMES" />
        <!-- 1: título -->
        <RowConstraints prefHeight="82" vgrow="SOMETIMES" />
        <!-- 2: saudação -->
        <RowConstraints prefHeight="40" vgrow="SOMETIMES" />
        <!-- 3: email -->
        <RowConstraints prefHeight="30" vgrow="SOMETIMES" />
        <!-- 4: pesquisa -->
        <RowConstraints prefHeight="155" vgrow="SOMETIMES" />
        <!-- 5: cadastrar veículos -->
        <RowConstraints prefHeight="60" vgrow="SOMETIMES" />

        <RowConstraints prefHeight="70" vgrow="SOMETIMES" />

        <RowConstraints prefHeight="80" vgrow="SOMETIMES" />

        <RowConstraints prefHeight="90" vgrow="SOMETIMES" />

        <RowConstraints prefHeight="538" vgrow="SOMETIMES" />
    </rowConstraints>

    <children>
        <!-- Logo -->
        <Label text=" CarGO" textFill="#1e3a5f" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
            <font><Font name="System Bold Italic" size="36" /></font>
        </Label>

        <!-- Título -->
        <Label text="Painel administrativo" textFill="#1e3a5f" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <font><Font size="52" /></font>
        </Label>

        <!-- Botão Sair -->
        <Button fx:id="botaoSair" onAction="#voltarParaLogin" text="Sair" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0" GridPane.valignment="TOP">
            <font><Font size="18" /></font>
        </Button>

        <!-- Saudação -->
        <Label fx:id="saudacaoLabel" text="" textFill="#1e3a5f" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
            <font><Font size="24" /></font>
        </Label>

        <!-- Email do Admin -->
        <Label fx:id="emailLabel" text="" textFill="#1e3a5f" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
            <font><Font size="18" /></font>
        </Label>

        <!-- Área de Pesquisa (rowIndex = 4) -->
        <Label text="Pesquisar" textFill="#1e3a5f" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4">
            <font><Font size="29" /></font>
            <GridPane.margin>
                <Insets left="5" />
            </GridPane.margin>
        </Label>
        <TextField prefHeight="35" prefWidth="798" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <font><Font size="19" /></font>
            <GridPane.margin>
                <Insets right="100" />
            </GridPane.margin>
        </TextField>
        <Button text="Buscar" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <font><Font size="18" /></font>
        </Button>

        <!-- Linha 5: botão Cadastrar veículos -->
        <Button fx:id="cadastrarVeiculosButton" onAction="#abrirCadastroVeiculo" style="-fx-background-color: #1e3a5f;" text="Cadastrar veículos" textFill="#e0e0e0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER">
            <font><Font size="18" /></font>
        </Button>

        <Button fx:id="cadastrarAdminButton" onAction="#abrirCadastroAdmin" style="-fx-background-color: #1e3a5f;" text="Cadastrar Admin" textFill="#e0e0e0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
            <font><Font size="18" /></font>
        </Button>

        <Button fx:id="gerenciarClientes" onAction="#abrirTeste" style="-fx-background-color: #1e3a5f;" text="Gerenciar Clientes" textFill="#e0e0e0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER">
            <font><Font size="18" /></font>
        </Button>

        <Button fx:id="gerenciarVeiculos" onAction="#abrirGerenciarVeiculos" style="-fx-background-color: #1e3a5f;" text="Gerenciar Veiculos" textFill="#e0e0e0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="8" GridPane.valignment="CENTER">
            <font><Font size="18" /></font>
        </Button>

    </children>
</GridPane>
