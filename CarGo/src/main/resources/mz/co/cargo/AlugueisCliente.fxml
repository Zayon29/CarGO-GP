<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="640.0" spacing="10" style="-fx-padding: 20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mz.co.cargo.Controller.AlugueisClienteController">

    <Label style="-fx-font-size: 18px;" text="Meus Aluguéis" />

    <TableView fx:id="tabelaAlugueis" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="colVeiculo" prefWidth="200" text="Veículo" />
            <TableColumn fx:id="colDataInicio" prefWidth="150" text="Início" />
            <TableColumn fx:id="colDataFim" prefWidth="150" text="Fim" />
            <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button onAction="#devolverVeiculo" text="Devolver Veículo">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button onAction="#voltar" text="Voltar">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </HBox>

    <Label fx:id="mensagemLabel" style="-fx-text-fill: red" />
</VBox>
