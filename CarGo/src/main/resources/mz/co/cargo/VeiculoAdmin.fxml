<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mz.co.cargo.Controller.VeiculoAdminController"
            prefHeight="600.0" prefWidth="800.0">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="200"/>
            </columnConstraints>

            <!-- Sem RowConstraints agora -->

            <Label text="Marca:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="marcaTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Modelo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="modeloTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Ano de Fabricação:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="anoFabricacaoTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Placa:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="placaTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Preço do Aluguel:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="precoTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="statusTextField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Quilometragem:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="kmTextField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Combustível:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="combustivelTextField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        </GridPane>

        <Label text="Histórico de Manutenções:" style="-fx-font-weight: bold;"/>
        <TableView fx:id="tableHistorico" prefHeight="150">
            <columns>
                <TableColumn fx:id="colunaData" text="Data" prefWidth="120"/>
                <TableColumn fx:id="colunaDescricao" text="Descrição" prefWidth="400"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Salvar" onAction="#salvarAlteracoes"/>
            <Button text="Voltar" onAction="#voltar"/>
        </HBox>
    </VBox>
</AnchorPane>
