<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mz.co.cargo.Controller.GerenciarClientesController"
            style="-fx-background-color: #E0E0E0;"
            prefWidth="1200" prefHeight="900">

    <center>
        <VBox spacing="10" padding="10">
            <!-- Barra de pesquisa -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Pesquisar cliente por nome..."
                           prefWidth="400"/>
                <Button text="Buscar" onAction="#onSearch"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </HBox>

            <!-- Tabela de clientes -->
            <TableView fx:id="clientesTable" prefHeight="800">
                <columns>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="400"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="400"/>
                    <TableColumn fx:id="colAcoes" text="Ações" prefWidth="200">
                        <!-- Configuração das células de ação -->
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>